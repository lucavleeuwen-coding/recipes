{% extends 'base.html.twig' %}

{% block title %}Ingredient index{% endblock %}

{% block body %}

    <h1>Ingredient index</h1>
    {% for message in app.flashes('succes') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="card-deck">
        {% for ingredient in ingredients %}
            <div class="card text-white bg-dark">
                <img class="card-img-top" src="{{ asset('img/ingredient.png') }}" alt="Recepten">
                <div class="card-body">
                    <h5 class="card-title">Ingredient: {{ ingredient.name }}</h5>
                    <p class="card-text">
                        <a href="{{ path('ingredient_show', {'id': ingredient.id}) }}">show</a>
                        <a href="{{ path('ingredient_edit', {'id': ingredient.id}) }}">edit</a>
                    </p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
            </div>
        {% endfor %}
    </div>

    <a style="color: white" href="{{ path('ingredient_new') }}">Create new</a>
{% endblock %}
